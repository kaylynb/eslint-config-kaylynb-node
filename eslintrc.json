{
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "script"
	},

	"env": {
		"node": true
	},

	"rules": {
		"no-cond-assign": 2,
		"no-constant-condition": [2, { "checkLoops": false }],
		"no-control-regex": 2,
		"no-debugger": 2,
		"no-dupe-args": 2,
		"no-dupe-keys": 2,
		"no-duplicate-case": 2,
		"no-empty": 2,
		"no-empty-character-class": 2,
		"no-ex-assign": 2,
		"no-extra-boolean-cast": 2,
		"no-func-assign": 2,
		"no-inner-declarations": [2, "both"],
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-obj-calls": 2,
		"no-regex-spaces": 2,
		"no-sparse-arrays": 2,
		"no-unexpected-multiline": 2,
		"no-unreachable": 2,
		"no-unsafe-finally": 2,
		"use-isnan": 2,
		"valid-typeof": 2,
		"accessor-pairs": 2,
		"array-callback-return": 2,
		"consistent-return": 2,
		"default-case": 2,
		"eqeqeq": [2, "smart"],
		"no-alert": 2,
		"no-case-declarations": 2,
		"no-empty-function": 2,
		"no-empty-pattern": 2,
		"no-eq-null": 2,
		"no-eval": 2,
		"no-extend-native": 2,
		"no-fallthrough": 2,
		"no-floating-decimal": 2,
		"no-implied-eval": 2,
		"no-native-reassign": 2,
		"no-redeclare": 2,
		"no-self-assign": 2,
		"no-self-compare": 2,
		"radix": 2,
		"strict": [2, "global"],
		"no-shadow": 2,
		"no-unused-vars": 2,
		"no-use-before-define": 2,
		"global-require": 2,
		"no-path-concat": 2,
		"no-lonely-if": 2,
		"no-unneeded-ternary": 2,
		"constructor-super": 2,
		"no-const-assign": 2,
		"no-dupe-class-members": 2,
		"no-new-symbol": 2,
		"no-this-before-super": 2,
		"no-useless-computed-key": 2,
		"no-useless-constructor": 2,
		"no-var": 2,
		"object-shorthand": [2, "always"],
		"prefer-const": 2,
		"prefer-rest-params": 2,
		"prefer-spread": 2,
		"prefer-template": 2,

		"eol-last": 2,
		"linebreak-style": [2, "unix"]
	}
}
